<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SevenBoom"
    android:background="@drawable/bg_seven_boom">


    <Button
        android:id="@+id/boom"
        android:layout_width="285dp"
        android:layout_height="85dp"
        android:background="@drawable/bg_btn_seven_boom"
        android:fontFamily="@font/black_ops_one"
        android:text="@string/press_to_boom"
        android:textColor="#cc181e"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.618" />

    <TextView
        android:id="@+id/points_seven_boom"
        android:layout_width="104dp"
        android:layout_height="54dp"
        android:fontFamily="@font/russo_one"
        android:gravity="center"
        android:text="points"
        android:textColor="#e6770b"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/level_seven_boom"
        android:layout_width="97dp"
        android:layout_height="53dp"
        android:fontFamily="@font/russo_one"
        android:gravity="center"
        android:text="1"
        android:textColor="#52d053"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="190dp"
        android:layout_height="152dp"
        android:layout_marginTop="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/num"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/num"
        app:layout_constraintTop_toBottomOf="@+id/num">

    </LinearLayout>

    <TextView
        android:id="@+id/num"
        android:layout_width="238dp"
        android:layout_height="144dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/p_red"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level_seven_boom" />

</androidx.constraintlayout.widget.ConstraintLayout>